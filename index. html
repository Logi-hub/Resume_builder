<script>
let project3Visible = false;

function toggleProject3() {
  project3Visible = !project3Visible;
  document.getElementById('project3_block').classList.toggle('hidden', !project3Visible);
}

function listFromComma(srcId, targetId) {
  const ul = document.getElementById(targetId);
  ul.innerHTML = '';
  const val = document.getElementById(srcId).value.split(',').map(x => x.trim()).filter(Boolean);
  val.forEach(item => {
    const li = document.createElement('li');
    li.innerText = item;
    ul.appendChild(li);
  });
}

function addBulletPoints(arr, targetUlId){
  const ul = document.getElementById(targetUlId);
  ul.innerHTML = '';
  arr.filter(Boolean).forEach(pt => {
    const li = document.createElement('li');
    li.textContent = pt;
    ul.appendChild(li);
  });
}

function updateResume(){
  // Left
  document.getElementById('r_name').textContent = document.getElementById('f_name').value;
  document.getElementById('r_headline').textContent = document.getElementById('f_headline').value;
  document.getElementById('r_phone').textContent = document.getElementById('f_phone').value;
  document.getElementById('r_email').textContent = document.getElementById('f_email').value;
  document.getElementById('r_location').textContent = document.getElementById('f_location').value;

  const gh = document.getElementById('f_github').value.trim();
  const ghWrap = document.getElementById('r_github');
  const ghVal = document.getElementById('r_github_val');
  if(gh){
    ghWrap.style.display = 'block';
    ghVal.innerHTML = '<a href="'+gh+'" target="_blank">'+gh+'</a>';
  }else{
    ghWrap.style.display = 'none';
    ghVal.innerHTML = '';
  }

  const li = document.getElementById('f_linkedin').value.trim();
  const liWrap = document.getElementById('r_linkedin');
  const liVal = document.getElementById('r_linkedin_val');
  if(li){
    liWrap.style.display = 'block';
    liVal.innerHTML = '<a href="'+li+'" target="_blank">'+li+'</a>';
  }else{
    liWrap.style.display = 'none';
    liVal.innerHTML = '';
  }

  document.getElementById('r_summary').textContent = document.getElementById('f_summary').value;

  listFromComma('f_techskills', 'r_techskills');
  listFromComma('f_softskills', 'r_softskills');
  listFromComma('f_languages', 'r_languages');

  // Projects
  document.getElementById('r_p1_title').textContent = document.getElementById('p1_title').value;
  document.getElementById('r_p1_date').textContent = document.getElementById('p1_date').value;
  addBulletPoints([
    document.getElementById('p1_p1').value,
    document.getElementById('p1_p2').value
  ], 'r_p1_points');

  document.getElementById('r_p2_title').textContent = document.getElementById('p2_title').value;
  document.getElementById('r_p2_date').textContent = document.getElementById('p2_date').value;
  addBulletPoints([
    document.getElementById('p2_p1').value,
    document.getElementById('p2_p2').value
  ], 'r_p2_points');

  // Project 3 (optional)
  const p3_title = document.getElementById('p3_title') ? document.getElementById('p3_title').value.trim() : '';
  const p3_date  = document.getElementById('p3_date')  ? document.getElementById('p3_date').value.trim()  : '';
  const p3_p1    = document.getElementById('p3_p1')    ? document.getElementById('p3_p1').value.trim()    : '';
  const p3_p2    = document.getElementById('p3_p2')    ? document.getElementById('p3_p2').value.trim()    : '';

  const proj3 = document.getElementById('proj3');
  if(p3_title || p3_date || p3_p1 || p3_p2){
    proj3.style.display = 'block';
    document.getElementById('r_p3_title').textContent = p3_title;
    document.getElementById('r_p3_date').textContent = p3_date;
    addBulletPoints([p3_p1, p3_p2], 'r_p3_points');
  }else{
    proj3.style.display = 'none';
  }

  // Education
  document.getElementById('r_education').textContent = document.getElementById('f_education').value;

  // Course work
  listFromComma('f_coursework', 'r_coursework');

  // Internships
  document.getElementById('r_i1_title').textContent = document.getElementById('i1_title').value;
  document.getElementById('r_i1_date').textContent  = document.getElementById('i1_date').value;
  addBulletPoints([
    document.getElementById('i1_p1').value,
    document.getElementById('i1_p2').value
  ], 'r_i1_points');

  document.getElementById('r_i2_title').textContent = document.getElementById('i2_title').value;
  document.getElementById('r_i2_date').textContent  = document.getElementById('i2_date').value;
  addBulletPoints([
    document.getElementById('i2_p1').value,
    document.getElementById('i2_p2').value
  ], 'r_i2_points');

  // Certifications
  listFromComma('f_certifications', 'r_certifications');
}

function downloadPDF(){
  updateResume();
  const el = document.getElementById('resume');
  const opt = {
    margin: 0,
    filename: 'Resume.pdf',
    image: { type: 'jpeg', quality: 0.98 },
    html2canvas: { scale: 2, useCORS: true },
    jsPDF: { unit: 'pt', format: 'a4', orientation: 'portrait' }
  };
  window.scrollTo(0,0);
  html2pdf().set(opt).from(el).save();
}

// auto-update on typing for quick preview
document.addEventListener('input', (e) => {
  const ids = ['f_name','f_headline','f_phone','f_email','f_location','f_github','f_linkedin','f_summary',
    'f_techskills','f_softskills','f_languages','p1_title','p1_date','p1_p1','p1_p2','p2_title','p2_date','p2_p1','p2_p2',
    'p3_title','p3_date','p3_p1','p3_p2','f_education','f_coursework','i1_title','i1_date','i1_p1','i1_p2',
    'i2_title','i2_date','i2_p1','i2_p2','f_certifications'];
  if(ids.includes(e.target.id)) updateResume();
});

// init
updateResume();
</script>
</body>
